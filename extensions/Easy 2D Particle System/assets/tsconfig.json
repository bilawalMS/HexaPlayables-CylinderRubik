{
    "compilerOptions": {
        "target": "ES2017",
        "module": "CommonJS",
        "strict": false,        
        "rootDir": "./EasyP2D",
        "outDir": "./lib",
        "moduleResolution": "node",

        "declaration": true,
        "noEmit": false,
        "emitDeclarationOnly": true,
        "composite": true,

        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true,
        "experimentalDecorators":true,
        "types": [
            "../@types"
        ]
    }
}